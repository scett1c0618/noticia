@model noticia.Services.Post
@{
    ViewData["Title"] = Model.Title;
    var author = ViewBag.Author as noticia.Services.User;
    var comments = ViewBag.Comments as List<noticia.Services.Comment>;
}

<h1>@Model.Title</h1>
<p>@Model.Body</p>

<h3>Autor</h3>
<p>@author?.Name (@author?.Email)</p>

<h3>Comentarios</h3>
@if (comments != null && comments.Count > 0)
{
    <ul>
    @foreach (var comment in comments)
    {
        <li>
            <strong>@comment.Name</strong> (@comment.Email):<br />
            @comment.Body
        </li>
    }
    </ul>
}
else
{
    <p>No hay comentarios.</p>
}

<h3>Reacci贸n</h3>
<div id="feedback-section">
    <button id="likeBtn" class="btn btn-success"> Me gust贸</button>
    <button id="dislikeBtn" class="btn btn-danger"> No me gust贸</button>
    <span id="feedback-message" style="margin-left:10px;"></span>
</div>

<h3>Reacciones de los usuarios</h3>
<p>
     Me gust贸: <strong>@ViewBag.Likes</strong> <br />
     No me gust贸: <strong>@ViewBag.Dislikes</strong>
</p>

@section Scripts {
    <script>
        document.getElementById('likeBtn').onclick = function () {
            enviarFeedback('like');
        };
        document.getElementById('dislikeBtn').onclick = function () {
            enviarFeedback('dislike');
        };

        function enviarFeedback(sentimiento) {
            fetch('/api/feedbackapi', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    postId: @Model.Id,
                    sentimiento: sentimiento
                })
            })
            .then(response => {
                if (response.ok) return response.json();
                return response.text().then(text => { throw new Error(text); });
            })
            .then(data => {
                document.getElementById('feedback-message').innerText = "隆Gracias por tu feedback!";
                document.getElementById('likeBtn').disabled = true;
                document.getElementById('dislikeBtn').disabled = true;
            })
            .catch(error => {
                document.getElementById('feedback-message').innerText = error.message;
            });
        }
    </script>
}